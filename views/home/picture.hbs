<div class="container">
    <div class="row">
        <div class="col-md-3 body-main categories">
            <div class="well">
                <h4 class="blog-categories-home">Categories</h4>
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="list-unstyled">
                            {{#each categories}}
                                <li><a href="/category/picture/{{ this.id }}">{{ this.name }} ({{ this.pictures.length }})</a>
                                </li>
                            {{/each}}
                        </ul>
                    </div>

                </div>
            </div>
            <div class="well">
                {{#if user}}
                    <a href="/picture/create" class="btn btn-default createBtn">Submit Picture&nbsp;&nbsp;&nbsp;<i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
                {{/if}}
                <!--<hr class="hr"/>-->
                <form class="form-horizontal" method="POST" action="/home/picture">
                    <div class="form-group input-group">
                        <span class="input-group-btn">
                            <button class="btn btn-default searchButton" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                        </span>
                        <input type="text" class="form-control" placeholder="Search" name="search">
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-9">
            {{#each pictures}}
                <div class="col-md-4 body-img">
                    <div class="hovereffect">
                        <a href="/picture/details/{{this.id}}">
                            <img class="img-responsive galery-image" src="/uploads/{{this.img.name}}" alt="">
                            <div class="overlay">
                                <h2>{{this.title}}</h2>
                                <!--<a class="btn btn-default pull-right" href="/picture/details/{{this.id}}">See More <span class=""></span></a>
                        <!--<a class="info" href="#">{{this.title}}</a>-->
                            </div>
                        </a>
                    </div>
                </div>

            {{/ each}}
        </div>
    </div>
</div>
