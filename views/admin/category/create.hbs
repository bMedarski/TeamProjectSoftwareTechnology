<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" action="/admin/category/create" method="POST">
            <fieldset>
                <legend>New Category</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="name">Category Name</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="name" placeholder="Category Name" name="name">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a class="btn btn-default" href="/admin/category/all">Cancel</a>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
