<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article class="body-main body-main main-article">
                <h2 class="mainColor " style="margin-bottom: 0">{{ comment.article.title }}</h2>

                <p class="clearfix text">
                    {{#if comment.article.img.name}}
                        <img class="img-responsive thumbnail" src="/uploads/{{article.img.name}}" alt="">
                    {{/if}}
                    {{ comment.article.content }}
                </p>
                <hr class="hr"/>
            </article>
        </div>
        <div class="col-md-12">
            <article class="comment">
                <form class="form-horizontal" method="POST" action="/article/comment/edit/{{comment.id}}">
                    <fieldset>
                        <textarea class="form-control" id="comments-edit" rows="2" name="comment" required>{{comment.content}}</textarea>
                        <a class="btn btn-default pull-right" style="padding: 10px;margin-left: 5px" href="/article/details/{{comment.article.id}}"><i class="fa fa-backward" aria-hidden="true"></i> &nbsp;&nbsp;Back</a>
                        <a class="btn btn-default pull-right" style="padding: 10px;margin-left: 5px" href="/article/comment/delete/{{comment.id}}"><i class="fa fa-trash-o" aria-hidden="true"></i>&nbsp;&nbsp; Delete</a>
                        <button type="submit" class="btn btn-default pull-right"><i class="fa fa-trash-o" aria-hidden="true"></i>&nbsp;&nbsp; Edit</button>

                    </fieldset>
                </form>
            </article>
        </div>
    </div>
</div>
