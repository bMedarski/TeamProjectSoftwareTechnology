<div class="container body-content">
    <h1>Searching by tag - {{ tag.name }}</h1>
    <div class="row">
        {{#each articles}}
            <div class="col-md-6">
                <article class="body-main body-main main-article">
                    <h2 class="mainColor " style="margin-bottom: 0">{{ this.title }}</h2>
                    <p class="lead" style="margin-bottom: 8px">
                        by <a href="#" class="mainColor authorArt" >{{ this.author.fullName }}</a>
                    </p>
                    <p class="text clearfix"><img class="img-responsive" src="/uploads/{{this.img.name}}" alt="">  {{ this.content }}</p>
                    <hr class="hr"/>
                    <div class="pull-left" style="margin-bottom: 10px">
                        {{#each this.tags }}
                            <a class="btn btn-default btn-xs" style="padding:5px 7px;"
                               href="/tag/{{this.name}}">{{ this.name }}</a>
                        {{/each}}
                    </div>
                    <a class="btn btn-default pull-right" href="/article/details/{{this.id}}">Read More <span class=""></span></a>
                </article>
            </div>
        {{/ each}}
    </div>
</div>
